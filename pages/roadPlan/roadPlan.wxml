<view>
  <view class="search">
    <van-cell-group class="cell-group" >
      <van-field value="{{ location }}" 
      clearable left-icon="location" 
      bind:click-icon="onClickIcon" 
      bind:input="onChange"  
      bind:focus = "focus"/>
      
      <van-field value="{{ toWhere }}" 
      left-icon="location" 
      border="{{ true }}" 
      bind:click-icon="onClickIcon1"
      bind:input="onChange1" 
      bind:focus = "focus"/>
    </van-cell-group>
    <van-icon class="icon1" name="sort" size="20px" />
  </view>
  <view class="roads">
    <van-tabs active="{{ active }}" bind:change="onChangeTar" inset>
      <van-tab title="推荐">
