              <text class="walk">步行:175米</text>
            </view>
          <view class="v1">12站 . 围里村口站上车</view>
          <view class="v2">
            <view class="bus">
              <image class="busPng" src="/images/bus.png"/>
              <view class="t1">431路</view>
            </view>
          </view>
          <view class="v3">
            <view class="t2">431路</view>
              <view class="t3">
                <van-icon name="volume-o" />
                最近车辆: 10站 | 16分钟
              </view>
          </view>
        </view>
      </van-tab>
