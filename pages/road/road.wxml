
<view >
  <view class="first">
    <van-panel title="方向：{{direction}}"
    desc="首：{{startTime}} 末：{{endTime}} ;    一票制1元" >
      <view class="station">
        <text>起点预计发车 : {{realData.startTime}}</text>
        <van-button class="time" plain type="primary" 
        size="small" bind:click="goTime">时刻表</van-button>
      </view>
    </van-panel>
  </view>

  <view class="two"> 
   <view class="showTime">
      <view class="v2" wx:if="{{realData.time != null}}">
        <view class="v3">{{realData.moneyStation}}站:</view>
        <view class="v4">{{realData.time}} / {{realData.meter}}</view>
      </view>

      <view class="vv2" wx:if="{{realData.time == null}}">
        <view class="vv3">等待发车...</view>
      </view>
   </view>
  </view>

  <scroll-view class="out" scroll-x >
      <view class="bus">
        <image class="busPng" style="{{busPlace}}" src="/images/bus1.png"/>
      </view>
      <view class="road" style="{{width}}">
        <image wx:for="{{stationList.length-1}}" class="m1" st src="/images/arrow.png"/>
      </view>
      <view class="start">起</view>
      <view class="end" style="{{endLeft}}">终</view>
      <view class="end1" style="{{endLeft1}}"></view>
      
      <view class="number0">
       <text class="number" wx:for="{{stationList.length}}" wx:if="{{index+1 < 10}}"  >{{index+1}}</text>
       <text class="number"  wx:for="{{stationList.length}}" wx:if="{{index+1 >= 10}}"  style="{{numberLeft}}">{{index+1}}</text>
      </view>
      <view class="sta">
        <view  class="area"  wx:for="{{stationList}}">
          <text class="tee" wx:if="{{item.station.stationName == nearStation}}">{{item.station.stationName}}</text>
          <text class="te" wx:if="{{item.station.stationName != nearStation}}">{{item.station.stationName}}</text>
        </view>
      </view>
  </scroll-view>  

</view>

